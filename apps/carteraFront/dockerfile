# Etapa 1: Build con dependencias completas
FROM node:20-alpine AS build

WORKDIR /app

# 1. Copia archivos de dependencias
COPY package.json package-lock.json* ./

# 2. Limpiar TODO
RUN npm cache clean --force && \
    rm -rf node_modules package-lock.json

# 3. Instalar dependencias frescas
RUN npm install --legacy-peer-deps

# üî• 4. Forzar reinstalaci√≥n de esbuild en node_modules de vite
RUN cd node_modules/vite && \
    rm -rf node_modules/esbuild && \
    npm install esbuild@0.25.12 --force

# 5. Verificar versi√≥n
RUN npx esbuild --version

# 6. Copia el resto del c√≥digo
COPY . .

# 7. Variables de entorno
ARG VITE_BACK_URL=https://qk4sw4kc4c088c8csos400wc.s3.devteamatcci.site
ENV VITE_BACK_URL=$VITE_BACK_URL

RUN echo "üîç Building with VITE_BACK_URL=$VITE_BACK_URL"

# 8. Build
RUN npm run build

# Etapa 2: Nginx
FROM nginx:alpine

RUN rm -rf /usr/share/nginx/html/*

COPY --from=build /app/dist /usr/share/nginx/html
COPY nginx.conf /etc/nginx/conf.d/default.conf

EXPOSE 80

CMD ["nginx", "-g", "daemon off;"]