---
import Link from "@/components/primitives/Link.astro";

interface Props {
  title: string;
  projects: {
    vehicle: string;
    amount: string;
    rate: string;
    duration: string;
    guarantee: string;
  }[];
  buttons?: {
    title: string;
    href: string;
    style: string;
    icon?: string;
  }[];
}

const { title, projects, buttons = [] } = Astro.props;
---

<div class="pt-36" id="active-projects">
  <p
    class="text-[2.13rem] leading-9 font-semibold mb-3 text-center mx-auto"
    set:html={title}
  />
  <p class="text-lg text-neutral-600 mb-8 text-center">
    Ejemplos reales y simulados para que visualices dónde se coloca tu capital:
  </p>
  <div class="mt-16">
    <div
      class="auto-cols-fr grid-cols-1 md:grid-cols-2 lg:grid-cols-3 grid-rows-[auto] grid gap-8 justify-items-center"
    >
      {
        projects.map(({ vehicle, amount, rate, duration, guarantee }) => (
          <div class="bg-white border border-neutral-200 rounded-xl p-6 shadow-sm hover:shadow-md transition-shadow">
            <div class="flex items-center mb-4">
              <div class="w-3 h-3 bg-green-500 rounded-full mr-3" />
              <h3 class="text-xl font-semibold">{vehicle}</h3>
            </div>
            <div class="space-y-3 text-sm">
              <div class="flex justify-between">
                <span class="text-neutral-600">Monto colocado:</span>
                <span class="font-semibold">{amount}</span>
              </div>
              <div class="flex justify-between">
                <span class="text-neutral-600">Tasa anual:</span>
                <span class="font-semibold text-green-600">{rate}</span>
              </div>
              <div class="flex justify-between">
                <span class="text-neutral-600">Plazo:</span>
                <span class="font-semibold">{duration}</span>
              </div>
              <div class="pt-3 border-t border-neutral-100">
                <div class="flex justify-between">
                  <span class="text-neutral-600">Garantía:</span>
                  <span class="font-semibold text-blue-600">{guarantee}</span>
                </div>
              </div>
            </div>
          </div>
        ))
      }
    </div>
    {
      buttons.length > 0 && (
        <div class="mt-12 text-center">
          {buttons.map(({ title, href, style, icon }) => (
            <Link
              href={href}
              style={style as "primary" | "button" | "outline" | "buttonLight"}
              icon={icon}
            >
              {title}
            </Link>
          ))}
        </div>
      )
    }
  </div>
</div>
